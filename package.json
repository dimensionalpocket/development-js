{
  "name": "@webmuds/development",
  "version": "0.1.1",
  "description": "Development packages for WebMUDs projects",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && NODE_ENV=test c8 mocha",
    "test:ci": "NODE_ENV=test mocha",
    "lint": "standardx --fix",
    "release": "release-it --config config/release-it/config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webmuds/development.git"
  },
  "author": "webmuds.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webmuds/development/issues"
  },
  "homepage": "https://github.com/webmuds/development#readme",
  "dependencies": {
    "@babel/core": "7.14.6",
    "@babel/eslint-parser": "7.14.7",
    "@types/chai": "4.2.21",
    "@types/chai-as-promised": "7.1.4",
    "@types/mocha": "8.2.3",
    "@types/node": "16.3.3",
    "@types/sinon": "10.0.2",
    "@types/sinon-chai": "3.2.5",
    "c8": "7.7.3",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "mocha": "9.0.2",
    "sinon": "11.1.1",
    "sinon-chai": "3.7.0",
    "standardx": "7.0.0"
  },
  "devDependencies": {
    "release-it": "14.10.0"
  },
  "babel": {
    "extends": "./config/babel"
  },
  "eslintConfig": {
    "extends": "./config/eslint"
  },
  "mocha": {
    "recursive": true,
    "reporter": "dot",
    "colors": true
  },
  "c8": {
    "all": true,
    "include": [
      "index.js",
      "config"
    ],
    "exclude": [
      "config/babel",
      "config/eslint",
      "config/release-it"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
